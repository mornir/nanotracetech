---
import Layout from '../components/Layout.astro'
import sanity from '../sanity'
import { Image } from '@astrojs/image/components'

import red from '../assets/red.webp'

const query = /* groq */ `*[_type == "sanity.imageAsset"]`

const photos = await sanity.client.fetch(query)
---

<Layout>
  <div class="flex flex-wrap justify-center gap-x-8 gap-y-10">
    {
      photos.map((photo) => (
        <img
          width="250"
          height="280"
          src={sanity.urlFor(photo).width(500).height(560).url()}
          alt="img"
          loading="lazy"
        />
      ))
    }
  </div>
  <Image
    slot="img-footer"
    src={red}
    alt=""
    class="h-40 w-screen object-cover object-bottom"
  />
</Layout>
